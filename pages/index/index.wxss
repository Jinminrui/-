/**index.wxss**/
.selection{
  border-bottom: 3px solid #ddd;
}
.swiper{
  width: 100%;
  height: 450rpx;
}

.swiper image{
  width: 100%;
  height: 100%;
}

.navs {
  display: flex;
  background-color: "WhiteSmoke";
}
.nav-item {
  width: 50%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 20rpx;
}
.nav-item .nav-image {
  width: 60rpx;
  height: 60rpx;
  margin: 5rpx;
}
.nav-item text{
  margin-top: 20rpx;
  font-size: 25rpx;
  color: gray;
}

.header{
  border-left-width: 2px;
  border-left-style: solid;
  border-left-color: lime;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 60rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  padding-top:8rpx; 
  margin-top: 4rpx;
}

.text-all{
  color: yellowgreen;
  font-size: 10px;
  font-family: cursive;
}
.list-item{
  display: flex;
  height: 220rpx;
  width: 100%;
  margin-top: 6px;
  border-bottom:2rpx solid #7FFF00; 
  
}

.list-item-image{
  height: 220rpx;
  width: 40%;
}

.list-item-image image{
  height: 200rpx;
  width: 300rpx;
}
.list-item-text{
  height: 200rpx;
  width: 96%;
  margin-top: 10rpx;
  padding-left:10rpx; 
  padding-right: 10rpx;
}


.avatar{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  position: absolute;
  bottom: -75rpx;
  right: 100rpx;
}

.list-item-text-content{
  display: flex;
  font-size:15px;
  color: #999;
  margin-top: 10rpx;
}

.list-item-text-content image{
  width: 25px;
  height: 25px;
}
