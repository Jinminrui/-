/* pages/mine/mine.wxss */
.container1{
  background-color: white;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #7FFF00;
  padding: 50rpx 0;
}
.account-bg {
  width: 100%;
  height: 150rpx;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color:black;
}
.navs {
  display: flex;
  background-color: "WhiteSmoke";
}
.nav-item {
  width: 50%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 20rpx;
}
.nav-item .nav-image {
  width: 40rpx;
  height: 40rpx;
  margin: 5rpx;
}
.nav-item text{
  margin-top: 20rpx;
  font-size: 25rpx;
  color: gray;
}
.line{
  width: 100%;
  height: 2rpx;
  color: black;
}