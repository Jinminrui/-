.list-item{
  display: flex;
  height: 200rpx;
  width: 100%;
  border-bottom:2rpx solid #7FFF00; 
  
}

.list-item-image{
  height: 200rpx;
  width: 40%;
}

.list-item-image image{
  height: 190rpx;
  width: 300rpx;
}
.list-item-text{
  height: 200rpx;
  width: 96%;
  margin-top: 10rpx;
  padding-left:10rpx; 
  padding-right: 10rpx;
}


.avatar{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  position: absolute;
  bottom: -75rpx;
  right: 100rpx;
}

.list-item-text-content{
  display: flex;
  font-size:15px;
  color: #999;
  margin-top: 10rpx;
}

.list-item-text-content image{
  width: 25px;
  height: 25px;
}